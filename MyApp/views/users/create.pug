extends ../layouts/common

block content
        h1.pt-3 Create Form
        if errors
                each error in errors
                        .alert.alert-danger= error

        form(action='/users/create', method='POST')
                label(for="name") Name
                input#name.form-control.col-8(type='text' name='name', value=values ? values.name : '')
                label(for="phone") Phone
                input#phone.form-control.col-8(type='text' name='phone', value=values ? values.phone : '')
                button.btn.btn-primary.mt-3 add