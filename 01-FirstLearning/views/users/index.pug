    a(href="users/create") New Create

    form(action='users/search', method='GET' class="d-flex")
            input(type='text' name='q' class="form-control col-4")
            button(class="ml-2 btn btn-danger") Search

    ul
    each user in users
            li
                span= user.name 
                a(href=`users/${user.id}`) View 